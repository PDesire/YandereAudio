<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="projectmeli.yandereaudio.pdesire">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="projectmeli.yandereaudio.pdesire.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:allowEmbedded="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.meli.pdesire.yanderecore.YandereAudioActivity"
            android:label="@string/service_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.meli.pdesire.yanderecore.PDesireAudioActivity"
            android:label="@string/title_activity_pdesire_audio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.meli.pdesire.yanderecore.UniversalManagementActivity"
            android:label="@string/title_activity_universal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.meli.pdesire.yanderecore.SonyManagementActivity"
            android:label="@string/title_activity_sony">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.meli.pdesire.yanderecore.YandereSettingsActivity"
            android:label="@string/settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.meli.pdesire.yanderecore.listeners.YandereWearableApplyListener" >
            <intent-filter>
                <!-- listeners receive events that match the action and data filters -->
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.CAPABILITY_CHANGED" />
                <action android:name="com.google.android.gms.wearable.CHANNEL_EVENT" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/start" />
            </intent-filter>
        </service>

        <service
            android:name="com.meli.pdesire.yanderecore.services.YandereJobSchedulerService"
            android:label="YandereJobSchedulerService"
            android:permission="android.permission.BIND_JOB_SERVICE" >
        </service>

        <service
            android:name="com.meli.pdesire.yanderecore.services.YandereFirebaseJobSchedulerService"
            android:label="YandereJobSchedulerService"
            android:permission="android.permission.BIND_JOB_SERVICE" >
        </service>

        <service
            android:name="com.meli.pdesire.yanderecore.services.YandereFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <receiver android:name="com.meli.pdesire.yanderecore.receivers.YandereBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0" />

    </application>

</manifest>